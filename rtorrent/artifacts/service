[Unit]
Description=rTorrent & ruTorrent
After=docker.service docker-latest.service network-online.target
Wants=network-online.target

[Service]
EnvironmentFile=-/etc/environment
EnvironmentFile=/etc/sysconfig/containers/%p
Restart=on-failure
RestartSec=1

ExecStartPre=-/usr/bin/docker rm -fv ${NAME}
ExecStart=/usr/bin/docker run --name=${NAME} --env-file=/etc/sysconfig/containers/%p \
--net=${NET} -m ${MEM} --memory-swap=${SWAP} --cap-drop=ALL --read-only \
-p ${ADDRESS}:${PORT_RANGE}:${PORT_RANGE}/udp -p ${ADDRESS}:${PORT_RANGE}:${PORT_RANGE}/tcp \
-p ${ADDRESS}:${DHT_PORT}:${DHT_PORT}/udp -p ${FORWARD_HTTP}:8080/tcp \
-v ${DATADIR}:/data:Z -v ${MNT}:/mnt:z $DOCKER_OPTS ${IMAGE}
ExecStop=/usr/bin/docker stop ${NAME}

[Install]
WantedBy=multi-user.target
