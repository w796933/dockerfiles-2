[Unit]
Description=Twitter IRCd
After=docker.service dns.service
Requires=docker.service

[Service]
Restart=on-failure
RestartSec=1
Environment=NAME=tircd-%i
Environment=DATA=/var/lib/tircd/%i
Environment=NET=default
Environment=MEM=64m
Environment=SWAP=128m

ExecStartPre=-/usr/bin/docker rm -fv ${NAME}
ExecStart=/usr/bin/docker run --name=${NAME} --cap-drop=ALL --read-only \
--net=${NET} -m ${MEM} --memory-swap=${SWAP} -v ${DATA}:/data:Z __IMAGE__

ExecStop=/usr/bin/docker stop ${NAME}

[Install]
WantedBy=multi-user.target
