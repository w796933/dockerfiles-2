[Unit]
Description=Samba NMBD
After=smb.service
Requires=smb.service

[Service]
EnvironmentFile=-/etc/sysconfig/containers/environment
EnvironmentFile=/etc/sysconfig/containers/samba/samba
Restart=on-failure
RestartSec=1

ExecStart=/usr/bin/docker exec -t ${NAME} nmbd

[Install]
WantedBy=multi-user.target
