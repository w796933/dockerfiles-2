[Unit]
Description=ZNC
After=docker.service
Requires=docker.service

[Service]
Restart=on-failure
TimeoutStartSec=0

ExecStartPre=-/usr/bin/docker rm -fv znc
ExecStart=/usr/bin/docker run --name znc -m 96m --cap-drop ALL \
-v /mnt/znc:/data:Z -p 7000:7000 quay.io/oszi/znc

ExecStop=/usr/bin/docker stop znc

[Install]
WantedBy=multi-user.target
