[Unit]
Description=ZNC
After=docker.service
Requires=docker.service

[Service]
Restart=on-failure
TimeoutStartSec=0

ExecStartPre=-/usr/bin/docker rm -fv znc
ExecStart=/usr/bin/docker run --name znc -v /mnt/znc:/data -p 6697:6697 -p 8443:8443 \
--cap-drop ALL -m 64m --memory-swap 128m nightling/znc

ExecStop=/usr/bin/docker stop znc

[Install]
WantedBy=multi-user.target
