[Unit]
Description=Unbound DNS Resolver
After=docker.service
Requires=docker.service

[Service]
Restart=always

ExecStartPre=-/usr/bin/docker rm -fv unbound
ExecStart=/usr/bin/docker run --name unbound -p 53:53/udp -p 53:53/tcp -m 64m --read-only \
-v /mnt/unbound:/etc/unbound/conf.d:ro,Z quay.io/oszi/unbound

ExecStop=/usr/bin/docker stop unbound

[Install]
WantedBy=multi-user.target
