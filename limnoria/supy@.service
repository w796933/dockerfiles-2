[Unit]
Description=Limnoria@%i
After=docker.service
Requires=docker.service

[Service]
Restart=on-failure
TimeoutStartSec=0

ExecStartPre=-/usr/bin/docker rm -fv supy-%i
ExecStart=/usr/bin/docker run --name supy-%i -v /mnt/supy-%i:/data \
--cap-drop ALL -c 128 -m 96m --memory-swap 256m nightling/limnoria supybot %i.conf

ExecStop=/usr/bin/docker stop supy-%i

[Install]
WantedBy=multi-user.target
